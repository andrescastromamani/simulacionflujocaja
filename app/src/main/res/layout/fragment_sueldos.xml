<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IueFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titleSueldosSalarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUELDOS Y SALARIOS"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:layout_margin="10dp"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ANTES DE INCREMENTO SALARIAL"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Total Ganado Mensual"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/etTotalGanadoMensualAntes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Aportes Patronales Mensuales"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/etAportesPatronalesMensualesAntes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DESPUES DE INCREMENTO SALARIAL"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Total Ganado Mensual"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/etTotalGanadoMensualDespues"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Aportes Patronales Mensuales"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/etAportesPatronalesMensualesDespues"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RETROACTIVO"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Retroactivo Sueldos Por Mes"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/etRetroactivoSueldosPorMes1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Numero de Meses"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <EditText
                    android:id="@+id/etNumeroMesesSueldos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Retroactivo Sueldos Por Mes"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/etRetroactivoSueldosPorMes2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Retroactivo Aportes Por Mes"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/etRetroactivoAportesPorMes1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Numero de Meses"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <EditText
                    android:id="@+id/etNumeroMesesAportes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="Retroactivo Aportes Por Mes"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/etRetroactivoAportesPorMes2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnSaveSueldos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#039BE5"
                    android:text="Calcular" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnGeneratePdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/black"
                    android:text="Generar PDF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>